<p id="notice"><%= notice %></p>

<p>
  <strong>Content:</strong>
  <%= @report.content %>
</p>

<p>
  <strong>Reportable type:</strong>
  <%= @report.reportable_type %>
</p>

<p>
  <strong>Reportable:</strong>
  <% if @report.reportable_type.equal?("Unit") %>
    <td><%= Unit.find_by(:id => report.reportable_id) %></td>
<% elsif @report.reportable_type.equal?("Plan") %>
    <td><%= Plan.find_by(:id => report.reportable_id) %></td>
<% end %>
</p>

<p>
  <strong>User:</strong>
  <%= @report.user.email %>
</p>

<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %>
