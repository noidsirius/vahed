<table style="direction:ltr">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Shared</th>
      <th>Score</th>
      <th>Field</th>
      <th>Term</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.title %></td>
        <td><%= plan.content %></td>
        <td><%= plan.shared %></td>
        <td><%= plan.score %></td>
        <td><%= plan.field %></td>
        <td><%= plan.term %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plan', new_plan_path %>
<% if user_signed_in? %>
<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
<% end %>
